{
	"name": "Moodle Session Extender",
	"version": "0.1.0",
	"description": "Extend your moodle sessions!",
	"homepage_url": "https://github.com/DCNick3/moodle-session-ext",
	"manifest_version": 2,
	"minimum_chrome_version": "100",
	"browser_specific_settings": {
		"gecko": {
			"id": "moodle-session-ext@dcnick3.me",
			"strict_min_version": "100.0"
		}
	},
	"icons": {
		"1024": "../icon.png"
	},
	"permissions": [
		"storage",
		"cookies",
		"notifications",
		"https://moodle.innopolis.university/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://moodle.innopolis.university/*" ],
			"js": [ "../content.js" ],
			"css": [ "../content.css" ],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"browser_style": true,
		"page": "../options.html"
	},
	"background": {
        "scripts": [
            "../background.js"
        ],
        "persistent": false
    }
}
